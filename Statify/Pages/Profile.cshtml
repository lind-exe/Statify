@page
@model Statify.Pages.ProfileModel
@{
    var src = "";
    var followerCount = 0;
    if (Model.User.Images.FirstOrDefault(x => x.Width == 300) is not null)
    {

        var img = Model.User.Images.FirstOrDefault(x => x.Width == 300);
        if (img is not null)
        {
            src = img.Url;
        }
        else
        {
            src = "https://image.spreadshirtmedia.net/image-server/v1/compositions/T773A1PA1611PT10X4Y4D147280542W6736H5479/views/3,width=550,height=550,appearanceId=1,backgroundColor=FFFFFF,noPt=true/trollface-rageface-meme-termosmugg.jpg";
        }
        src = img is null ? "" : img.Url;

    }
    else
    {
        src = "https://image.spreadshirtmedia.net/image-server/v1/compositions/T773A1PA1611PT10X4Y4D147280542W6736H5479/views/3,width=550,height=550,appearanceId=1,backgroundColor=FFFFFF,noPt=true/trollface-rageface-meme-termosmugg.jpg";
    }
    if (Model.User.Followers is not null)
    {
        followerCount = Model.User.Followers.Total;
    }
}


@if (Model.User is not null)
{
    <div class="mx-auto page-container">

        <div class="row text-center my-4">
            <div class="col">
                <img class="shadow" id="img1" alt="Image1.png" style="width: 225px; height: 225px; border: solid 2px #627AB2;" src="@src">
            </div>
        </div>

        <div class="row  my-4 bg-color text-center text-color-white shadow">
            <div class="col py-3">
                <h1>@Model.User.DisplayName</h1>
                <h1>@Model.User.Country</h1>
                <br />
                <h1>Account - @Model.User.Id</h1>
                <h1>@Model.User.Product user</h1>
            </div>
        </div>

        <div class="row text-center">
            <h1 class="font-big text-color-accent letter">@followerCount</h1>
            <h2 class="text-color-accent letter">FOLLOWERS</h2>
        </div>
    </div>
}